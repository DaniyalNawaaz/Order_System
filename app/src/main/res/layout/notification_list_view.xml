<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/list_background"
    android:layout_marginTop="20dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/notif_mesg"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:textColor="@color/menu_font"
        android:textStyle="bold"
        android:text="Your OrderId Delivery Date is very near. Kindly Delivered it fast"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/txt_notif_date"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textSize="15dp"
            android:textColor="@color/menu_font"
            android:textStyle="bold"
            android:text="10 July 2016"/>

        <TextView
            android:id="@+id/txt_notif_time"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textSize="15dp"
            android:textColor="@color/menu_font"
            android:textStyle="bold"
            android:gravity="right"
            android:text="3:19pm"/>

    </LinearLayout>

</LinearLayout>

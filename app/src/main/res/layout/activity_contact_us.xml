<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_background"
    tools:context="com.technologyminds.ferozproductsorderbookingsystem.ContactUsActivity">

    <include
        android:id="@+id/include"
        layout="@layout/header"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:weightSum="1"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="0dip"
                    android:layout_height="30dp"
                    android:src="@drawable/home"
                    android:layout_weight="0.1"/>

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="40dp"
                    android:layout_weight="0.03"/>
                <TextView
                    android:layout_width="0dip"
                    android:layout_height="40dp"
                    android:layout_weight="0.8"
                    android:gravity="center_vertical"
                    android:text="FEROZ PRODUCTS"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="@color/menu_font"/>
            </TableRow>

            <TableRow
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:weightSum="1">

                <ImageView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"/>

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.03"/>
                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:gravity="center_vertical"
                    android:text="F-150-B, Hub Road, S.I.T.E"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/menu_font"/>
            </TableRow>

            <TableRow
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="4dp"
                android:weightSum="1">

                <ImageView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"/>

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.03"/>
                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:gravity="center_vertical"
                    android:text="Karachi 75700"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/menu_font"/>
            </TableRow>

            <TableRow
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:weightSum="1"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="0dip"
                    android:layout_height="30dp"
                    android:src="@drawable/phone"
                    android:layout_weight="0.1"/>

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="40dp"
                    android:layout_weight="0.03"/>
                <TextView
                    android:id="@+id/txt_phone_no"
                    android:layout_width="0dip"
                    android:layout_height="40dp"
                    android:layout_weight="0.8"
                    android:gravity="center_vertical"
                    android:text="021 32567 044"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/menu_font"/>
            </TableRow>

            <TableRow
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:weightSum="1"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="0dip"
                    android:layout_height="25dp"
                    android:src="@drawable/message"
                    android:layout_weight="0.1"/>

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="40dp"
                    android:layout_weight="0.03"/>
                <TextView
                    android:layout_width="0dip"
                    android:layout_height="40dp"
                    android:layout_weight="0.8"
                    android:gravity="center_vertical"
                    android:text="feedback@ferozproducts.com"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/menu_font"/>
            </TableRow>

        </TableLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_button"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="BACK"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"/>

    <include layout="@layout/footer"/>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_background"
    tools:context="com.technologyminds.ferozproductsorderbookingsystem.OrderStatisticActivity">

    <include layout="@layout/header"/>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_marginBottom="70dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:id="@+id/table_menu">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:weightSum="1"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.35"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:text="Store Name: "
                    android:textColor="@color/menu_font"/>

                <TextView
                    android:id="@+id/txt_order_store_name"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:text="Abdullah Store"
                    android:textColor="@color/menu_font"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:weightSum="1"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.35"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:text="Order ID: "
                    android:textColor="@color/menu_font"/>

                <TextView
                    android:id="@+id/txt_order_code"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:text="66788893"
                    android:textColor="@color/menu_font"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:weightSum="1"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.35"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:text="Order Date: "
                    android:textColor="@color/menu_font"/>

                <TextView
                    android:id="@+id/txt_order_date"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:text="03/18/2016"
                    android:textColor="@color/menu_font"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:weightSum="1"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.35"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:text="Delievery Date: "
                    android:textColor="@color/menu_font"/>

                <TextView
                    android:id="@+id/txt_order_delivery_date"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:text="03/24/2016"
                    android:textColor="@color/menu_font"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_create_report_row_paddingBottm"
                android:weightSum="1"
                android:layout_marginTop="15dp">

                <View
                    android:id="@+id/lineListTittleOne"
                    android:layout_width="0dip"
                    android:layout_height="@dimen/header_line_layout_width"
                    android:layout_weight="1"
                    android:background="@color/heading" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_create_report_row_paddingBottm"
                android:weightSum="7" >

                <TextView
                    android:id="@+id/tvTitlePON"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="Product"
                    android:textColor="@color/menu_font"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvTitleItemSKU"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:text="QTY"
                    android:textColor="@color/menu_font"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvTitleItemDIS"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:gravity="center"
                    android:text="Discount"
                    android:textColor="@color/menu_font"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvTitleVendor"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Price"
                    android:textColor="@color/menu_font"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvTitleCountry"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Total"
                    android:textColor="@color/menu_font"
                    android:textSize="15dp"
                    android:textStyle="bold" />


            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_create_report_row_paddingBottm"
                android:weightSum="1" >

                <View
                    android:id="@+id/lineListTittletwo"
                    android:layout_width="0dip"
                    android:layout_height="@dimen/header_line_layout_width"
                    android:layout_weight="1"
                    android:background="@color/heading" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="@dimen/table_row_height"
                android:weightSum="1"
                android:layout_marginTop="5dp"
                android:id="@+id/table_row_4">

                <com.technologyminds.ferozproductsorderbookingsystem.ExpandableHeightGridView
                    android:id="@+id/list_order_statistic"
                    android:width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:numColumns="1"
                    android:gravity="center"
                    android:dividerHeight="3dip"
                    android:divider="@color/heading"
                    android:columnWidth="100dp"
                    android:horizontalSpacing="10dp"
                    android:verticalSpacing="10dp"
                    android:stretchMode="columnWidth"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_create_report_row_paddingBottm"
                android:weightSum="1"
                android:layout_marginTop="15dp">

                <View
                    android:layout_width="0dip"
                    android:layout_height="@dimen/header_line_layout_width"
                    android:layout_weight="1"
                    android:background="@color/heading" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_create_report_row_paddingBottm"
                android:weightSum="6" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="@dimen/header_line_layout_width"
                    android:layout_weight="3"/>

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="Sub Total : "
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:textColor="@color/heading"
                    android:layout_weight="2"/>

                <TextView
                    android:id="@+id/txt_sub_total_ammount"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="143.90"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:textColor="@color/heading"
                    android:layout_weight="1"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingBottom="@dimen/activity_create_report_row_paddingBottm"
                android:weightSum="6" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="@dimen/header_line_layout_width"
                    android:layout_weight="3"/>

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="Total Discount : "
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:textColor="@color/heading"
                    android:layout_weight="2"/>

                <TextView
                    android:id="@+id/txt_total_discount"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="143.90"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:textColor="@color/heading"
                    android:layout_weight="1"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingBottom="@dimen/activity_create_report_row_paddingBottm"
                android:weightSum="6" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="@dimen/header_line_layout_width"
                    android:layout_weight="3"/>

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="Grand Total : "
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:textColor="@color/heading"
                    android:layout_weight="2"/>

                <TextView
                    android:id="@+id/txt_total_ammount"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="143.90"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:textColor="@color/heading"
                    android:layout_weight="1"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_create_report_row_paddingBottm"
                android:weightSum="1" >

                <View
                    android:layout_width="0dip"
                    android:layout_height="@dimen/header_line_layout_width"
                    android:layout_weight="1"
                    android:background="@color/heading" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:weightSum="1"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/table_row_7">

                <Button
                    android:id="@+id/btn_back"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:text="BACK"
                    android:padding="10dip"
                    android:background="@drawable/login_button"
                    android:textColor="@color/white"
                    android:tag="Date"
                    android:textStyle="bold"/>

            </TableRow>

        </TableLayout>
    </ScrollView>

    <include layout="@layout/footer"/>
</RelativeLayout>
